gcp_project_id  = "your-gcp-project-id"
gcp_region      = "us-central1"
gcp_zone        = "us-central1-a"
domain          = "yourdomain.com"
app_image       = "ghcr.io/your-org/codechroniclenet:latest"
machine_type    = "e2-micro"
admin_ssh_cidrs = ["YOUR_IP/32"]

